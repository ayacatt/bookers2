<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'users/list', user: @user , newbook: @newbook %>
    </div>

<div class="col-md-8 offset-md-1">
<h2>Book detail</h2>

  <table class="table table-hover table-inverse">

  <thead>
    <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
  <tr>
    <td><%= link_to user_path(@book.user)  do %>
    <%= attachment_image_tag @book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
    <%= link_to @user.name, user_path(@user.id) %></td>
    <% end %>
    <td><%= link_to @book.title, book_path(@book.id) %></td>
    <td><%= @book.body %></td>

    <td>
      <% if @user == current_user %>
      <%= link_to "Edit", edit_book_path(@book.id) , class: "btn-sm btn-success" %></td>
      <% end %>
    <td>
      <% if @user == current_user %>
      <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %></td>
      <% end %>
  </tr>
  </tbody>
  </table>
  </div>
</div>
