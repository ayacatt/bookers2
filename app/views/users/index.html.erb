<div class="container">
  <div class="row">
    <div class="col-lg-4" >
      <%= render 'users/list', users: @users , newbook: @newbook %>
    </div>
  

<div class="col-lg-8">
<h2>Users</h2>
  <table class="table table-hover table-inverse">

  <thead>
    <tr>
    <th>image</th>
    <th>name</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
  <tr>
    <td><%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
    <td><%= user.name %></td>
    <td><%= link_to "Show", user_path(@book.id) %></td>
  </tr>
    <% end %>
  </tbody>
  </table>
  </div>
</div>
