<div class="container">
  <div class="row">
    <div class="col-lg-4" >
      <%= render 'users/list', users: @users , newbook: @newbook %>
    </div>

<div class="col-lg-8">
<h2>Books</h2>

  <table class="table table-hover table-inverse">

  <thead>
    <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @book.each do |book| %>
  <tr>
    <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%></td>
    <td><%= link_to book.title, book_path %></td>
    <td><%= book.opinion %></td>
    <td><%= link_to "edit", user_path(current_user.id)  %></td>
    <td><%= link_to "destroy", destroy_book_path(@book.id), method: :delete, "data-confirm" =></td>
  </tr>
    <% end %>
  </tbody>
  </table>
  </div>
</div>
